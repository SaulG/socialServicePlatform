<% provide(:title, 'Registro') %>
<h1>Registro de usuario</h1>
<div class="row">
    <div class="span6 offset3">
        <%= form_for(@user) do |f| %>
        <%=render 'shared/error_user_messages' %>
        <%= f.label :email,"Correo electronico" %>
        <%= f.text_field :email %>

        <%= f.label :password, "Contrasena" %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirmacion de contrasena" %>
        <%= f.password_field :password_confirmation %>

        <%= f.hidden_field :role, :value => @role %>

        <%= f.submit "Crear cuenta", class: "btn btn-large
                                                  btn-primary" %>
        <% end %>
    </div>
</div>
