<% provide(:title, "Editando informacion personal") %>
<h1> Informacion personal</h1>
<div class="row">
    <div class"span6 offset3">
        <%= form_for(@user) do |f| %>
        <%= render 'shared/error_user_messages' %>
        <%= f.label :name, "Nombre" %>
        <%= f.text_field :name %>

        <%= f.label :last_name, "Apellidos" %>
        <%= f.text_field :last_name %>

        <%= f.label :email,"Correo electronico" %>
        <%= f.text_field :email %>

        <%= f.fields_for :address do |builder| %>
        <%= builder.label :description, "Direccion" %>
        <%= builder.text_area :description, :rows=>"2" %>
        <% end %>

        <%= f.fields_for :contact_number do |builder| %>
        <%= builder.label "Numero de contacto" %>
        <%= builder.select :type_of_number_id,
        TypeOfNumber.all.collect{|t|[t.type_of_number, t.id]}, class:"span2" %>
        <%= builder.text_field :number, class:"span2"%>
        <% end %>
        <%= f.label :password, "Contrasena" %>
        <%= f.password_field :password %>


        <%= f.label :password_confirmation, "Confirmacion de contrasena" %>
        <%= f.password_field :password_confirmation %>
        <%= f.submit "Save changes", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
