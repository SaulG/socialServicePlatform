<% provide(:title, 'Informacion de la dependencia') %>
<div class="row">
    <div class="span6 offset3">

        <%= form_for(@dependency_attendant) do |f| %>

        <%= render 'shared/error_dependency_attendant_messages' %>
        <h2> Informacion de la dependencia </h2>

        <%= f.label "Dependencia" %>
        <%= f.collection_select :dependency_id,
            Dependency.all, :id, :name, 
            :prompt => "Seleccione alguna dependencia" %>

        <%= f.submit "Agregar informacion", class: "btn btn-large
        btn-primary" %>

        <% end %>
    </div>
</div>

